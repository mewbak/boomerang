CC = g++ -g

PROGRAM = TestPlugin/TestPlugin boomerang
all:    $(PROGRAM)

OBJECTS = $(PROGRAM).o

# implementation

.SUFFIXES:	.o .cpp

.cpp.o :
	$(CC) -c `wx-config --cflags` -o $@ $<


#$(PROGRAM):	$(OBJECTS)
#	$(CC) -o $(PROGRAM) $(OBJECTS) `wx-config --libs`

TestPlugin/TestPlugin: TestPlugin/TestPlugin.o
	$(CC) -o $@ $^ `wx-config --libs`

boomerang: boomerang.o Preferences.o Project.o Plugin.o
	$(CC) -o $@ $^ `wx-config --libs`

clean: 
	rm -f *.o $(PROGRAM)
